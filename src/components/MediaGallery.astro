---
const mediaItems = [
  {
    type: "video",
    title: "Interview on Youth Leadership",
    url: "https://www.youtube.com/embed/mSGG1U9rCEM?si=GsIj0f5xQmsOQiVm"
  },
  {
    type: "video",
    title: "Call for Release of Arrested Students",
    url: "https://www.youtube.com/embed/k4gVjVpBWcE?si=fNheewa8wQ0STpe8"
  },
  {
    type: "video",
    title: "Interview with Milele FM",
    url: "https://www.youtube.com/embed/1HIX4H1kjWM?si=xgVIHeiAGf516RTV"
  },
];
---

<section id="media-gallery" class="py-20 bg-gradient-to-b from-purple-900 to-purple-700 text-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-white">Media & Gallery</h2>

    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
      {
        mediaItems.map((item) => (
          <div class="bg-white p-6 rounded-lg shadow-md text-gray-900">
            <h3 class="text-lg font-semibold mb-2">{item.title}</h3>
            {
              item.type === "video" ? (
                <iframe 
                  class="w-full h-56 rounded-lg"
                  src={item.url}
                  title={item.title}
                  allowfullscreen
                ></iframe>
              ) : (
                <img src={item.url} alt={item.title} class="w-full h-56 object-cover rounded-lg" />
              )
            }
          </div>
        ))
      }
    </div>

    <!-- Tagembed Widget Section -->
    <div class="max-w-6xl mx-auto">
      <div class="tagembed-widget w-full" style="width:100%;height:100%" data-widget-id="2166829" data-tags="false" view-url="https://widget.tagembed.com/2166829"></div>
    </div>
  </div>

  <!-- Tagembed Script -->
  <script src="https://widget.tagembed.com/embed.min.js" type="text/javascript" defer></script>
</section>
