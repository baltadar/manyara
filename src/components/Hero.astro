<section class="relative h-screen overflow-hidden text-white">
  <!-- Background Video -->
  <video
    id="bg-video"
    autoplay
    muted
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
    style="
      filter:
        brightness(1.6)
        contrast(1.15)
        saturate(1.1)
        drop-shadow(0 0 1px rgba(255,255,255,0.15));
    "
  >
    <source
      src="https://res.cloudinary.com/ddwam3xle/video/upload/v1745440346/Manyara2_c3dj38.mp4"
      type="video/mp4"
    />
    Your browser does not support the video tag.
  </video>

  <!-- Subtle Overlay (or remove this div if you want no overlay) -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-900/20 to-blue-900/10 z-10"></div>

  <!-- Text Overlay -->
  <div
    class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 bg-black/30 px-12 py-6 rounded-lg text-center w-full max-w-3xl"
  >
    <h1
      class="text-3xl md:text-4xl font-extrabold mb-2 tracking-tight text-slate-50"
      style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);"
    >
      Dr. Hon. Antony Manyara, HSC.
    </h1>
    <p
      class="text-base md:text-lg mb-4 text-slate-50"
      style="text-shadow: 1px 1px 3px rgba(0,0,0,0.7);"
    >
      Visionary Youth Leader for Kenya’s Transformation
    </p>
    <a
      href="#about"
      class="inline-block bg-orange-500 hover:bg-orange-600 text-white font-semibold px-6 py-2 rounded-full shadow-md transform transition duration-300 hover:scale-105"
    >
      Learn More
    </a>
  </div>

  <!-- Seek 60→130s and loop -->
  <script>
    const video = document.getElementById('bg-video');
    const START = 60;
    const END = 130;

    video.addEventListener('loadedmetadata', () => {
      video.currentTime = START;
      video.play();
    });

    video.addEventListener('timeupdate', () => {
      if (video.currentTime >= END) {
        video.currentTime = START;
        video.play();
      }
    });
  </script>
</section>
