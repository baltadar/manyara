---
import { FaEnvelope, FaPhone, FaMapMarker, FaFacebook, FaTwitter, FaInstagram, FaLinkedin, FaYoutube } from 'react-icons/fa';
---

<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Get in Touch</h2>

    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-2xl font-semibold mb-6">Contact Information</h3>
        <div class="space-y-4">
          <div class="flex items-start">
            <FaEnvelope className="w-6 h-6 text-primary mt-1 mr-4" />
            <div>
              <p class="font-semibold">Email</p>
              <a href="mailto:archmanyara@gmail.com" class="text-gray-600 hover:text-primary">
                archmanyara@gmail.com
              </a>
            </div>
          </div>
          
          <div class="flex items-start">
            <FaPhone className="w-6 h-6 text-primary mt-1 mr-4" />
            <div>
              <p class="font-semibold">Phone</p>
              <p class="text-gray-600">+254 700062420</p>
            </div>
          </div>
          
          <div class="flex items-start">
            <FaMapMarker className="w-6 h-6 text-primary mt-1 mr-4" />
            <div>
              <p class="font-semibold">Address</p>
              <p class="text-gray-600">P.O. Box 17586 - 00100,</p>
              <p class="text-gray-600">Nairobi, Kenya</p>
            </div>
          </div>
        </div>

        <div class="mt-12">
          <h3 class="text-2xl font-semibold mb-6">Follow Hon. Antony Manyara</h3>
          <div class="flex space-x-4">
            <a href="#" class="text-gray-600 hover:text-primary">
              <FaFacebook className="w-8 h-8" />
            </a>
            <a href="#" class="text-gray-600 hover:text-primary">
              <FaTwitter className="w-8 h-8" />
            </a>
            <a href="#" class="text-gray-600 hover:text-primary">
              <FaInstagram className="w-8 h-8" />
            </a>
            <a href="#" class="text-gray-600 hover:text-primary">
              <FaLinkedin className="w-8 h-8" />
            </a>
            <a href="#" class="text-gray-600 hover:text-primary">
              <FaYoutube className="w-8 h-8" />
            </a>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-semibold mb-6">Send a Message</h3>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
              required
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
              required
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
              required
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-primary text-white py-3 px-6 rounded-md hover:bg-primary/90 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
