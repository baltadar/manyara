---
import { FaEnvelope, FaPhone, FaMapMarkerAlt, FaFacebookF, FaTwitter, FaInstagram, FaLinkedin, FaYoutube } from 'react-icons/fa';
---

<section id="contact" class="py-20 bg-green-50">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold text-green-900 mb-4">Get in Touch</h2>
      <p class="text-lg text-green-700">Feel free to reach out for any inquiries or collaborations.</p>
    </div>

    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 mt-12">
      <!-- Contact Info -->
      <div class="bg-white p-8 rounded-2xl shadow-md border border-green-200">
        <h3 class="text-2xl font-semibold text-green-900 mb-6 text-center">Contact Information</h3>
        <div class="space-y-6">
          <div class="flex items-center space-x-4">
            <FaEnvelope class="w-7 h-7 text-green-500" />
            <div>
              <p class="font-semibold text-green-800">Email</p>
              <a href="mailto:archmanyara@gmail.com" class="text-green-700 hover:text-green-600">
                archmanyara@gmail.com
              </a>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <FaPhone class="w-7 h-7 text-green-500" />
            <div>
              <p class="font-semibold text-green-800">Phone</p>
              <p class="text-green-700">+254 700062420</p>
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <FaMapMarkerAlt class="w-7 h-7 text-green-500" />
            <div>
              <p class="font-semibold text-green-800">Address</p>
              <p class="text-green-700">P.O. Box 17586 - 00100, Nairobi, Kenya</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Media -->
      <div class="bg-white p-8 rounded-2xl shadow-md border border-green-200">
        <h3 class="text-2xl font-semibold text-green-900 mb-6 text-center">Follow Hon. Antony Manyara</h3>
        <div class="flex justify-center space-x-6">
          <a href="https://www.facebook.com/hon.antonymanyara/" class="text-green-700 hover:text-blue-600 transition duration-300" target="_blank">
            <FaFacebookF class="w-10 h-10" />
          </a>
          <a href="https://x.com/antonymanyara?lang=en" class="text-green-700 hover:text-blue-600 transition duration-300" target="_blank">
            <FaTwitter class="w-10 h-10" />
          </a>
          <a href="https://www.instagram.com/hon.antonymanyara/" class="text-green-700 hover:text-pink-500 transition duration-300" target="_blank">
            <FaInstagram class="w-10 h-10" />
          </a>
          <a href="https://www.linkedin.com/in/arch-antony-manyara-b8863195/?originalSubdomain=ke" class="text-green-700 hover:text-blue-700 transition duration-300" target="_blank">
            <FaLinkedin class="w-10 h-10" />
          </a>
          <a href="https://www.youtube.com/watch?v=k4gVjVpBWcE&ab_channel=MutembeiTV" class="text-green-700 hover:text-red-500 transition duration-300" target="_blank">
            <FaYoutube class="w-10 h-10" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
